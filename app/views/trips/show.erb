<div id="map">
  <iframe
    width="100%"
    height="350"
    frameborder="0" style="0"
    src="https://www.google.com/maps/embed/v1/place?q=<%=@trip.destination%>&key=AIzaSyArrSJE3KI4QDn1LIPgn-e2xO-CWHrSkLQ" allowfullscreen>
  </iframe>
</div>

<div id="show">
  <p id='destination'><%= @trip.destination %></p>
  <%= @trip.arrive.strftime('%A') %>, <%= @trip.arrive.strftime('%B') %> <%= @trip.arrive.strftime('%d') %>, <%= @trip.arrive.strftime('%Y') %> -
  <%= @trip.depart.strftime('%A') %>, <%= @trip.depart.strftime('%B') %> <%= @trip.depart.strftime('%d') %>, <%= @trip.depart.strftime('%Y')  %>
  <p id='description'><%= @trip.description %><br></p>
  <%= @trip.details %>

  <% if current_user && @trip.host_id == current_user.id %>
    <br><br><br><a href="/trips/<%= @trip.id %>/edit" id=>edit</a>
  <% end %>
</div>

<div class="comments">
  <% @comment.each do |comment| %>
    <% if comment.trip_id == @trip.id %>
      <div id="comment-text"><%= comment.text %>
      <div id="comment-author">- <%= comment.author %>
        </div>
      </div>
    <% end %>
  <% end %>

  <% if current_user %>
  <form action="/trips/<%= @trip.id %>/comments" method="post" id="comment-form">

    <label for="text" id="form-font"></label>
    <textarea name="text" class="add-comment" type="text" placeholder="comment"></textarea>

    <input type="submit" id="add-button" value="add">
  </form>
  <% end %>
</div>
