<% if current_user %>
  <h2> trips for <%= current_user.username %> </h2>
<% else  %>
  <h2> all trips </h2>
<% end %>

<div class="news-feed">
<% @trips.each do | trip | %>
  <div class="post">
  <p id="destination"><a href="/trips/<%= trip.id %>" ><%= trip.destination %></p></a>
  <p id="description"><%= trip.description %></p>
    Depart <%= trip.arrive.strftime('%x') %> -
    Arrive <%= trip.depart.strftime('%x') %><br><br>
    <% if current_user && trip.host_id == current_user.id %>
    <a href="/trips/<%= trip.id %>/edit">edit</a>
    <% end %></div><br><br>
    <% end %>
</div>
